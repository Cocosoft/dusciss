<% include common/default_top.ejs %>
		<div class="row">
			<div class="col-xs-4 col-sm-4">
				<div class="btn-group">
					<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
						<%=: feed.boardName | capitalize %> <span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu">
						<li><a href="/" role="menuitem">Main feed</a></li>
						<li class="divider"></li>
						<li><a href="/feed/gaming" role="menuitem">Gaming</a></li>
						<li><a href="/feed/programming" role="menuitem">Programming</a></li>	
						<li><a href="/feed/news" role="menuitem">News</a></li>
						<li><a href="/feed/electronicmusic" role="menuitem">Electronicmusic</a></li>
					</ul>
				</div>
			</div>
			<div class="hidden-xs col-sm-4">
				<h1 class="main-title"><%=: feed.boardName | capitalize  %></h1>
			</div>
			<div class="col-xs-8 col-sm-4 text-right">
				<a href="#"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-question-sign"></span> About</button></a>
				<a href="/create-thread<%= (!feed.mainFeed) ? '/'+feed.boardName : '' %>"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Make post</button></a>
			</div>
		</div>
<%	
	var threads = feed.threads;
	if(	threads.length>0) {
		for(var i=0; i<threads.length; i++) {
			var thread = threads[i];
-%>
		<div class="feed">
			<div class="row">
				<div class="col-xs-12">
				<div class="thread">
					<div class="thread-head">
						<h2 class="thread-head-title"><a href="#"><%= thread.title %></a></h2>
						<p class="thread-head-board">
							<a href="/feed/<%= thread.board %>"><%= thread.board %></a>
						</p>
					</div>
					<div class="thread-posts">
<%					
			for(var j=0; j<thread.posts.length; j++) {
				var post = thread.posts[j];
-%>
						<div class="thread-post">
							<h3>Anonymous</h3>
<% if(post.imgId) { -%>
							<div class="thread-post-image">
								<img src="/i/<%= post.imgId %>" alt="" class="media-object img-rounded" />
							</div>
<% } -%>
							<p><%= post.text %></p>
						</div>
<%			} -%>
					</div>
					<div class="thread-post">
						<form class="form-horizontal" method="post" action="/new-post/<%= thread._id %>" enctype="multipart/form-data">
							<div class="form-group">
								<label for="text" class="col-sm-1 control-label">Text:</label>
								<div class="col-sm-11">
									<textarea class="form-control" name="text" type="text" rows="3"></textarea>
								</div>
							</div>
							<div class="form-group">
							    <label class="col-sm-1 control-label">Image:</label>
							    <div class="col-sm-11">
									<input id="filestyle" id="img" name="img" type="file" />
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-offset-10 col-sm-2 col-md-offset-11 col-md-1">
									<input type="submit" value="Send" class="btn btn-block btn-success" />
								</div>
							</div>
						</form>
					</div>
				</div>
				</div>
			</div>
		</div>
<%		}
	}
	else {
%>
		<h2 class="text-info text-center">No threads found!</h2>
<%
	}
-%>
<% include common/default_bottom.ejs %>